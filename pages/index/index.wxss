/**index.wxss**/

/* 轮播图 */
.banners {
  width: 100%;
  height: 300rpx;
}

.banners image {
  height: 100%;
  width: 100%;
}

/* 导航 */
.navContainer {
  display: flex;
}

.navItem {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 20%;
}

.navItem .iconfont {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 100rpx;
  background: rgb(240, 19, 19);
  font-size: 50rpx;
  color: #fff;
  margin: 20rpx 0;
}

.navItem text {
  font-size: 26rpx;
}

/* 推荐歌曲 end 排行榜 */
.contentContainer {
  padding: 30rpx 20rpx;
}

.contentContainer .title {
    display: flex;
    justify-content: space-between;
    padding: 15rpx 0;
}

.contentContainer .recommendList {
    display: flex;
    height: 300rpx;
}

.recommendItem {
    width: 200rpx;
    margin-right: 20rpx;
}

.recommendItem image {
    width: 200rpx;
    height: 200rpx;
    border-radius: 10rpx;
}

.recommendItem text {
    font-size: 26rpx;

    /*单行文本溢出隐藏 省略号代替*/
    /*display: block;*/
    /*white-space: nowrap;*/
    /*overflow: hidden;*/
    /*text-overflow: ellipsis;*/

    /*多行文本溢出隐藏 省略号代替*/
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical; /*设置对齐模式*/
    -webkit-line-clamp: 2; /*设置多行的行数*/
}

.topList {
  height: 440rpx;
}

.topListItem {
  display: flex;
  flex-direction: column;
  background: #fbfbfb;
  margin-right: 30rpx;
  padding: 10rpx 30rpx;
}

.topListItem text {
  font-size: 30rpx;
}

.music {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

 .music image {
  height: 100rpx;
  width: 100rpx;
  border-radius: 5rpx;
  flex-shrink: 0;
}

.musicName {
    display: block;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}